<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Game\Tournament\Domain\Participant" table="participant">

        <id name="id" type="string" length="80">
            <generator strategy="NONE"/>
        </id>

        <field name="account" column="account_id" length="80"/>
        <field name="tournament" column="tournament_id" length="80"/>

        <field name="signUpDate" type="datetime"/>

    </entity>

</doctrine-mapping>
